@using UmutDeper.Web.Models

@model Kullanıcı
@{
    ViewBag.Title = "Login";
}


<h2>Login</h2>
<hr />
@using (Html.BeginForm("Login", "Kullanici", FormMethod.Post))
{
    <div class="row mb-3">
        @Html.LabelFor(x => x.Eposta, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(x => x.parola, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(x => x.parola, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            @Html.ValidationMessage("hata", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </div>
}